<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                            http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <!--     Country     -->

    <changeSet id="20170130002415" author="diego">
        <createTable tableName="Country">
            <column name="id" type="int(10)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(20)" >
                <constraints unique="true" nullable="false" uniqueConstraintName="unq_country_name"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="Country" />
        </rollback>
    </changeSet>

    <changeSet id="201702062225_insert_data_Country" author="diego" >
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM Country</sqlCheck>
        </preConditions>
        <loadData
                file="01_load_countries.csv"
                tableName="Country"
                relativeToChangelogFile="true">
            <column name="id" type="NUMERIC" />
            <column name="name" type="STRING"/>
        </loadData>
    </changeSet>

    <!--     City     -->

    <changeSet id="20170130000254" author="diego">
        <createTable tableName="City">
            <column name="id" type="int(10)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(20)" >
                <constraints unique="true" nullable="false" uniqueConstraintName="unq_city_name"/>
            </column>
            <column name="state" type="varchar(10)"/>
        </createTable>
        <rollback>
            <dropTable tableName="City" />
        </rollback>
    </changeSet>

    <changeSet id="20170206_add_country_id_to_city" author="diego">
        <addColumn
                tableName="City">
            <column name="country_id" type="INTEGER"/>
        </addColumn>
    </changeSet>

    <changeSet id="201702062256_add_fk_city_country" author="diego" >
        <addForeignKeyConstraint
                baseColumnNames="country_id"
                baseTableName="City"
                constraintName="fk_city_country"
                referencedColumnNames="id"
                referencedTableName="Country"/>
    </changeSet>

    <changeSet id="20170206_insert_data_City" author="diego" >
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM City</sqlCheck>
        </preConditions>
        <loadData
                file="02_load_cities.csv"
                tableName="City"
                relativeToChangelogFile="true"
                separator=";">
            <column name="id" type="NUMERIC" />
            <column name="name" type="STRING"/>
            <column name="state" type="STRING"/>
            <column name="country_id" type="NUMERIC"/>
        </loadData>
    </changeSet>

    <changeSet author="diego" id="1.2">
        <tagDatabase tag="1.2"/>
    </changeSet>

</databaseChangeLog>

